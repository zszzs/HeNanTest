<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentShow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_title"
            android:text="设置分辨率"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/resolution"
            android:focusable="true"
            android:nextFocusUp="@id/adjust_picture"
            android:nextFocusDown="@id/adjust_picture"
            android:text="        分辨率"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:background="@drawable/view_focus_selector">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_title"
            android:text="改变图像位置"
            android:textColor="#ffffff"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/adjust_picture"
            android:nextFocusUp="@id/resolution"
            android:nextFocusDown="@id/resolution"
            android:focusable="true"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:clickable="true"
            android:text="         调整画面输出区域"
            android:background="@drawable/view_focus_selector"/>

    </LinearLayout>



</FrameLayout>